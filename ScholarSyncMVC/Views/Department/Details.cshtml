@model CounryDeptEditVM

@{
	ViewData["Title"] = "University Details";
}

<h1>Department Details</h1>

<div>

	<hr />
	<dl class="row">
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Model.Name</dd>
	</dl>

	<dt class="col-sm-2">
		Photo
	</dt>
	<dd>
		<img src="~/Uploads/department/@Model.PhotoURL" class="w-25" alt="Alternate Text" />
	</dd>
	</dl>
</div>

<div class=" mt-4">
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

	<a asp-action="Index" class="btn btn-light">Back</a>
</div>