@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.BlazorIdentity.Pages
@model IEnumerable<Scholarship>
@{

    Layout = "~/Views/Shared/_MyLayOut.cshtml";
    //Layout = null;
} 
<section
	  class="hero-wrap hero-wrap-2"
         style="background-image: url('@Url.Content("~/images/تبادل2.png")');">

  >
	<div class="overlay"></div>
	<div class="container">
		<div
			class="row no-gutters slider-text align-items-end justify-content-center"
		>
			<div class="col-md-9 ftco-animate pb-5 text-center">
				<p class="breadcrumbs">
					<span class="mr-2"
					><a href="home.html"
					 >الرئيسية <i class="fa fa-chevron-right"></i></a
					></span>
					<span>برامج تبادل ثقافى <i class="fa fa-chevron-right"></i></span>
				</p>
				<h1 class="mb-0 bread">برامج تبادل ثقافى واقامات</h1>
			</div>
		</div>
	</div>
</section>


<header class="container" style="margin-top: 50px">
    <h1 itemprop="headline"
        class="text-2xl mb-4"
        style="font-size: 35px; font-weight: 900; text-align: right">
        برامج تبادل ثقافي و اقامات
    </h1>
    <div class="m-auto flex-col" style="text-align: right">
        <div class="read-more-container">
            <div class="transition-max-height duration-500 ease-in-out overflow-hidden max-h-full">
                <div data-testid="conversation-turn-27">
                    <div data-message-author-role="assistant"
                         data-message-id="1f1c0e3e-f8f0-4789-904a-6e73e9acf07f">
                        <div data-testid="conversation-turn-27">
                            <div data-message-author-role="assistant"
                                 data-message-id="1f1c0e3e-f8f0-4789-904a-6e73e9acf07f">
                                <p style="
                        font-size: 18px;
                        font-weight: 700;
                        text-align: right;
                      ">
                                    برامج التبادل الثقافي تهدف إلى تعزيز الحركة التعليمية
                                    والثقافية الدولية، وتطوير التفاهم المتبادل بين شعوب مختلفة
                                    وبناء شبكات علاقات واسعة مع أفراد من خلفيات ثقافية ولغوية
                                    متنوعة. هذه البرامج تتيح فرص التفاعل والتعلم من خلال
                                    مشاركة الطلاب والشباب في فعاليات متعددة مثل ورش العمل،
                                    المهرجانات، والندوات، إلى جانب الفرص للسفر والإقامة في
                                    الخارج بتمويل كامل لتوسيع مداركهم الثقافية وتعزيز مهاراتهم
                                    الشخصية والمهنية. تشمل هذه الفرص أيضًا الاقامة للفنانين
                                    والمهندسين المعماريين للاستفادة من بيئة إبداعية والعمل على
                                    مشاريعهم برفقة زملائهم من مختلف الثقافات، بالإضافة إلى
                                    دعمهم في تنفيذ مشاريعهم وبناء شبكات علاقات فعّالة في
                                    مجالات اهتمامهم.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>









<section class="ftco-section bg-light">
    <div class="container">
	    <div class="row">
		    @foreach (var scholarship in Model)
		    {
			    if(scholarship.CategoryId==1)continue;
			    <div class="col-md-6 d-flex align-items-stretch ftco-animate">
				    <div class="project-wrap">
					    <a asp-controller="Scholarship"
					       asp-action="Details"
					       asp-route-id="@scholarship.Id"
					       class="img"
					       style="background-image: url('@Url.Content("~/Uploads/scholarship/" + scholarship.PhotoURL)');">
						    <span class="price">@scholarship.Degree</span>
					    </a>
					    <div class="text p-4 text-right">
						    <h3>
							    <a asp-controller="Scholarship"
							       asp-action="Details"
							       asp-route-id="@scholarship.Id">
								    @scholarship.Name
							    </a>
						    </h3>
						    <p class="deadline">
							    <span>@scholarship.EndDate.ToString("dd/MM/yyyy")</span> :تاريخ الانتهاء
						    </p>
					    </div>
				    </div>
			    </div>
		    }
	    </div>
		
		
	    <div class="row mt-5">
		    <div class="col">
			    <div class="block-27">
				    <ul>
					    @for (int i = 1; i <= ViewBag.TotalPages; i++)
					    {
						    <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
								<a href="@Url.Action("viewcardExchangeprogram", new { categoryId = ViewBag.CategoryId, page = i })">@i</a>
						    </li>
					    }
				    </ul>
			    </div>
		    </div>
	    </div>


    </div>
</section>





