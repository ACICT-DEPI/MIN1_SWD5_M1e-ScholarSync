@model ScholarshipVM
@{
    ViewData["Title"] = "Details";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"  readonly/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Degree" class="control-label"></label>
            <input asp-for="Degree" class="form-control" readonly/>
        </div>
    </div>
</div>

<div class="form-group">
    <label for="example-textarea">Description</label>
    <textarea class="form-control" asp-for="Description" id="example-textarea" rows="4" readonly></textarea>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control" type="date" readonly/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" type="date" readonly/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Cost" class="control-label"></label>
            <input asp-for="Cost" class="form-control" readonly/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Duration" class="control-label"></label>
            <input asp-for="Duration" class="form-control" readonly/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputState">Category Name</label>
            <input asp-for="CategoryId" class="form-control" hidden />
            <input asp-for="Category.Name" class="form-control" readonly />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputState">University Name</label>
            <input asp-for="UniversityId" class="form-control" hidden />
            <input asp-for="University.Name" class="form-control" readonly />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputState">Country Name</label>
            <input asp-for="CountryId" class="form-control" hidden />
            <input asp-for="Country.Name" class="form-control" readonly />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputState">Department Name</label>
            <input asp-for="DepartmentId" class="form-control" hidden />
            <input asp-for="Department.Name" class="form-control" readonly />
        </div>
    </div>
</div>
<div class=" mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

    <a asp-action="Index" class="btn btn-light">Back</a>
</div>