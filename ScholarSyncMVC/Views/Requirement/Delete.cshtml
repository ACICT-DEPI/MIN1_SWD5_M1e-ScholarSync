@model RequirementVM
@{
    ViewData["Title"] = "Delete";
}

<div class="m-auto w-75  bg-white p-3">
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-primary mt-3 mb-2">
            @TempData["message"]
        </div>
    }

</div>
<h3>Are you sure you want to delete this?</h3>
<div>
    <form asp-action="Delete" method="post">

        <div class="col-md-4 mb-3" hidden>
            <label asp-for="Id"></label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="col-md-4 mb-3" hidden>
            <label asp-for="ScholarShipId"></label>
            <input type="text" class="form-control" asp-for="ScholarShipId" hidden />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Scholarship.Name"></label>
            <input type="text" class="form-control" value="@Model.Scholarship.Name" readonly>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Requirement"></label>
            <input type="text" class="form-control" asp-for="Requirement" readonly>

        </div>
        <div class="form-group mt-4">
            <input type="submit" value="Delete" class="btn btn-danger " />
            <a asp-action="Index" class="btn btn-light">Back</a>
        </div>

    </form>

</div>



