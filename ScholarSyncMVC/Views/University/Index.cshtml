@model IEnumerable<ScholarSyncMVC.ViewModels.UniversityVM>

@{
	ViewData["Title"] = "Universities";
}

<h1>Universities</h1>

@if (TempData["Message"] != null)
{
	<div class="alert alert-success">
		@TempData["Message"]
	</div>
}

<p>
	<a asp-action="Create" class="btn btn-primary">Create New University</a>
</p>

<table class="table table-bordered">
	<thead>
	<tr>
		<th>Name</th>
		<th>Contact Info</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var university in Model)
	{
		<tr>
			<td>@university.Name</td>
			<td>@university.ContactInfo</td>
			<td>
				<a asp-action="Details" asp-route-id="@university.Id" class="btn btn-info">Details</a>
				<a asp-action="Edit" asp-route-id="@university.Id" class="btn btn-warning">Edit</a>
				<a asp-action="Delete" asp-route-id="@university.Id" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>