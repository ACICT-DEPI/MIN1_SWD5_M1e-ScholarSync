@model ScholarSyncMVC.ViewModels.UniversityVM

@{
	ViewData["Title"] = "University Details";
}
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>University Details</h1>

<div>
	
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Model.Name</dd>

		<dt class="col-sm-2">Contact Info</dt>
		<dd class="col-sm-10">@Model.ContactInfo</dd>
	</dl>
</div>

<div class=" mt-4">
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

	<a asp-action="Index" class="btn btn-light">Back</a>
</div>